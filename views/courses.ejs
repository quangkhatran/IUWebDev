<%- include('partials/header') %>

<h1>Courses</h1>
<% courses.forEach( function(course){ %>
	<h2><%= course.title %></h2>
	<h3><%= course.description %></h3>	
	<a href="/courses/<%= course._id %>">More Information</a>	
	<a href="/courses/<%= course._id %>/edit">Edit</a>
	<a href="/courses/<%= course._id %>/delete">Delete</a>
	<hr>
<% }); %>


